<h2>注文履歴詳細</h2>
<%= form_with model: @order, url: admin_order_path, method: :patch, local: true do |f| %>
<table>
  <tr>
    <th>購入者</th>
    <td><%= link_to admin_customer_path do %>
    <%= @order.name %>
    <% end %>
    </td>
  </tr>
  <tr><th>注文日</th><td><%= @order.created_at.strftime("%Y-%m-%d") %></td></tr>
  <tr><th>配送先</th><td>〒<%= @order.postal_code %> <%= @order.address %> <%= @order.name %></td></tr>
  <tr><th>支払い方法</th><td><%= @order.pay_method_i18n %></td></tr>
</table>
<% end %>

<table>
  <thead>
    <tr>
      <th>商品名</th>
      <th>単価</th>
      <th>数量</th>
      <th>小計</th>
    </tr>
  </thead>
  <tbody>
   <% @order.order_details.each do |order_detail| %>
   <tr>
     <td><%= order_detail.item.name %></td>
     <td><%= change_price_excluding_tax(order_detail.price_including_tax) %></td>
     <td><%= order_detail.quantity %></td>
     <td><%= change_price_excluding_tax(order_detail.price_including_tax) * order_detail.amount %>円</td>
   </tr>
   <% end %>
  </tbody>
</table>

<table>
  <tr>
    <th>商品合計</th>
    <td><% @add_tax_total_payment = change_price_excluding_tax(@order.total_payment) %>
    <%= @add_tax_total_payment %>円
    </td>
  </tr>
  <tr><th>送料</th><td><%= @order.shipping_fee %>円</td></tr>
  <tr>
    <th>ご請求額</th>
    <td> <% @total_payment_add_shipping_fee = @add_tax_total_payment + @order.shipping_fee %>
    <%= @total_payment_add_shipping_fee %> 円</td>
  </tr>
</table>