<h3>商品編集</h3>
<%= form_with model: @item, url: admin_item_path do |f| %>

<div>
  <table>
  <tr>
   <th>商品画像</th>
   <td><%= f.file_field :image %></td>
  </tr>
  <tr>
    <th>商品名</th>
    <td><%= f.text_field :name %></td>
  </tr>
  <tr>
    <th>商品説明</th>
    <td><%= f.text_field :introduction, size: "50x5" %></td>
  </tr>
  <tr>
    <th>税抜価格</th>
    <td><%= f.text_field :price %></td>
  </tr>
  </table>
  <%= f.submit '変更を保存' %>
  
  
  
</div>
<% end %>