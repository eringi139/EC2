<% if @params.nil? %>
   <h2>注文履歴一覧</h2>
      <table>
        <thead>
          <tr>
            <th>購入日時</th>
            <th>購入者</th>
            <th>注文個数</th>
          </tr>
        </thead>
        <tbody>
          <% @orders.each do |order| %>
            <tr>
              <td>
                <%= link_to admin_order_path(order) do %>
                <%= order.created_at.strftime("%Y-%m-%d %H:%M:%S") %>
                <% end %>
              </td>
              <td>
                <%= order.name %>
              </td>
              <td>
                <% @total_amount = 0 %>
                <% order.order_details.each do |order_detail| %>
                <% @total_amount += order_detail.quantity %>
                <% end %>
                <%= @total_amount %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <% else %>
      <h2>注文履歴一覧</h2>
      <table>
        <thead>
          <tr>
            <th>購入日時</th>
            <th>購入者</th>
            <th>注文個数</th>
          </tr>
        </thead>
        <tbody>
          <% @order.each do |order| %>
          <tr>
            <td>
              <%= link_to admin_order_path(order) do %>
              <%= order.created_at.strftime("%Y-%m-%d %H:%M:%S") %>
              <% end %>
            </td>
            <td>
              <%= order.name %>
            </td>
            <td>
              <% @total_amount = 0 %>
              <% order.order_details.each do |order_detail| %>
              <% @total_amount += order_detail.quantity %>
              <% end %>
              <%= @total_amount %>
            </td>
          </tr>
        <% end %>
        </tbody>
      </table>
<% end %>



